{% extends 'base.html.twig' %}

{% block title %} Modification du profil {% endblock %}

{% block body %}

    <div class="grix xs4 container">
        </div class = "col-xs4">

            <h1> Modification du profil de {{app.user.username}} </h1>
            {{ form_start(formProfile) }}
            {{ form_row(formProfile.username, {'label' : 'Changer le nom d\'utilisateur', 'attr': {'placeholder': 'votre nom d\'utilisateur...' }}) }}
            {{ form_row(formProfile.firstName, {'label' : 'Changer le prénom', 'attr': {'placeholder': 'votre prénom...' }}) }}
            {{ form_row(formProfile.lastName, {'label' : 'Changer le nom', 'attr': {'placeholder': 'votre nom...' }}) }}            
            <button type="submit" class="btn btn-success"> Enregistrer les modifications ! </button>
            {{ form_end(formProfile) }}

        </div>
    </div> 

{% endblock %}